<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1px"
                android:color="#cfcfd2"/>
            <solid android:color="#d2d2d2"/>
            <padding android:top="@dimen/btn_default_margin"
                android:left="@dimen/btn_default_margin"
                android:right="@dimen/btn_default_margin"
                android:bottom="@dimen/btn_default_margin"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <padding android:top="@dimen/btn_default_margin"
                android:left="@dimen/btn_default_margin"
                android:right="@dimen/btn_default_margin"
                android:bottom="@dimen/btn_default_margin"/>
        </shape>
    </item>
</selector>