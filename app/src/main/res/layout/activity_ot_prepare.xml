<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.prepare.OtPrepareActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.constraint.ConstraintLayout
            android:background="@color/app_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="42dp"
                android:contentDescription="@string/default_desc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@mipmap/part_1"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/recipeIcon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用频次"
                app:layout_constraintLeft_toRightOf="@id/recipeIcon"
                app:layout_constraintTop_toTopOf="@id/recipeIcon"
                android:textSize="@dimen/text_size_default"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/recipeIcon"
                app:layout_constraintLeft_toRightOf="@id/recipeIcon"
                android:text="@string/default_desc"
                android:textSize="@dimen/text_size_small"
                />
            <Button
                android:layout_width="156dp"
                android:layout_height="36dp"
                android:text="@string/default_button"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipeIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="12dp"
            android:background="@color/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_desc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>