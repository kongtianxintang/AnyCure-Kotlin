<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context=".activity.prepare.OtPrepareActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_marginStart="@dimen/prepare_margin"
            android:layout_marginEnd="@dimen/prepare_margin"
            android:layout_marginTop="@dimen/prepare_margin"
            android:background="@drawable/prepare_subview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="42dp"
                android:contentDescription="@string/default_desc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@mipmap/part_1"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/recipeIcon"
                />
            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用频次"
                app:layout_constraintLeft_toRightOf="@id/recipeIcon"
                app:layout_constraintTop_toTopOf="@id/recipeIcon"
                android:textSize="@dimen/text_size_default"
                android:layout_marginStart="@dimen/prepare_margin"
                />
            <TextView
                android:id="@+id/recipeTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/recipeIcon"
                app:layout_constraintLeft_toRightOf="@id/recipeIcon"
                android:text="@string/default_desc"
                android:textSize="@dimen/text_size_small"
                android:layout_marginStart="@dimen/prepare_margin"
                />
            <Button
                android:id="@+id/prepareButton"
                android:enabled="false"
                android:layout_width="156dp"
                android:layout_height="36dp"
                android:text="@string/prepare_button"
                android:background="@drawable/prepare_button_bg"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipeIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                />
        </android.support.constraint.ConstraintLayout>

        <com.sevenheaven.segmentcontrol.SegmentControl
            android:id="@+id/topSegment"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/prepare_margin"
            android:layout_marginStart="@dimen/prepare_margin"
            android:layout_marginEnd="@dimen/prepare_margin"
            app:texts="方案综述|电极贴法"
            app:selectedColor="@color/main"
            app:boundWidth="1dp"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="@dimen/prepare_margin"
            android:layout_marginStart="@dimen/prepare_margin"
            android:layout_marginEnd="@dimen/prepare_margin"
            android:background="@drawable/prepare_subview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/reviewEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_default"
                android:padding="@dimen/prepare_margin"
                android:lineSpacingMultiplier="1.4"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                />
           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="178dp"
               android:id="@+id/recyclerView"
               android:visibility="gone"
               />
            <TextView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="1/1"
                android:gravity="center"
                android:textSize="@dimen/text_size_big"
                android:background="@drawable/flag_label_bg"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/recyclerView"
                app:layout_constraintRight_toRightOf="@id/recyclerView"
                android:layout_margin="12dp"
                android:id="@+id/flagLabel"
                />
        </android.support.constraint.ConstraintLayout>

        <com.sevenheaven.segmentcontrol.SegmentControl
            android:id="@+id/midSegment"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/prepare_margin"
            android:layout_marginStart="@dimen/prepare_margin"
            android:layout_marginEnd="@dimen/prepare_margin"
            app:texts="注意事项|更换电极|使用禁忌"
            app:boundWidth="1dp"
            app:selectedColor="@color/main"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/midTextView"
            android:text="@string/default_desc"
            android:layout_margin="@dimen/prepare_margin"
            android:textSize="@dimen/text_size_default"
            android:lineSpacingMultiplier="1.4"
            android:background="@drawable/prepare_subview_bg"
            android:padding="@dimen/prepare_margin"
            />
    </LinearLayout>

</ScrollView>