<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chitwing.anycure_kotlin_master.activity.prepare.PrepareActivity">

    <TextView
        android:layout_margin="@dimen/btn_default_margin"
        android:padding="@dimen/btn_default_margin"
        android:id="@+id/prepare_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/default_title"
        android:lineSpacingMultiplier="1.2"
        android:background="@color/white"
        />

    <android.support.design.widget.TabLayout
        android:layout_margin="@dimen/btn_default_margin"
        android:id="@+id/prepare_tab_layout"
        app:layout_constraintTop_toBottomOf="@id/prepare_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="35dp"
        />


    <TextView
        android:id="@+id/prepare_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/prepare_tab_layout"
        app:layout_constraintBottom_toTopOf="@id/prepare_button"
        android:background="@color/white"
        android:text="@string/default_title"
        android:lineSpacingMultiplier="1.2"
        android:layout_margin="@dimen/btn_default_margin"
        android:scrollbars="vertical"
        android:padding="@dimen/btn_default_margin"
        android:textSize="@dimen/text_view_size"
        />

    <Button
        android:id="@+id/prepare_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/prepare_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_status_bg"
        android:layout_margin="@dimen/btn_default_margin"
        android:textColor="@color/white"
        android:enabled="false"
        />

</android.support.constraint.ConstraintLayout>
