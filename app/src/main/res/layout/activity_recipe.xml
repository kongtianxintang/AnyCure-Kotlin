<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.chitwing.anycure_kotlin_master.activity.RecipeActivity">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/js2"
        android:id="@+id/cure_progress"
        android:layout_marginBottom="@dimen/activity_default_margin"
        />
    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cure_add"
        android:src="@mipmap/add"
        app:layout_constraintLeft_toRightOf="@id/cure_progress"
        app:layout_constraintTop_toTopOf="@id/cure_progress"
        app:layout_constraintBottom_toBottomOf="@id/cure_progress"
        app:layout_goneMarginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        android:background="@drawable/btn_bg"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/minus"
        app:layout_constraintRight_toLeftOf="@id/cure_progress"
        app:layout_constraintTop_toTopOf="@id/cure_progress"
        app:layout_constraintBottom_toBottomOf="@id/cure_progress"
        app:layout_goneMarginRight="@dimen/activity_default_margin"
        android:layout_marginEnd="@dimen/activity_default_margin"
        android:id="@+id/cure_minus"
        android:background="@drawable/btn_bg"
        />

</android.support.constraint.ConstraintLayout>
