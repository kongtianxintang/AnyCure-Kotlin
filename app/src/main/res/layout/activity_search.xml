<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chitwing.anycure_kotlin_master.activity.search.SearchActivity">

    <!--todo:需要页头-->

    <android.support.constraint.ConstraintLayout
        android:background="@color/main"
        android:id="@+id/search_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_header_text"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:background="@color/main"
            android:textColor="@color/white"
            />
        <Button
            android:layout_width="156dp"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintTop_toBottomOf="@id/search_header_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/dialog_cancel_button_bg"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:layout_marginBottom="@dimen/dp_20"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_header"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>
