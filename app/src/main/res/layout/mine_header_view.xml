<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mine_header_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:contentDescription="@string/default_stop_desc"
        android:src="@mipmap/app_icon_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mineTelephone"
        app:layout_constraintTop_toTopOf="@id/mine_header_icon"
        app:layout_constraintBottom_toBottomOf="@id/mine_header_icon"
        app:layout_constraintLeft_toRightOf="@id/mine_header_icon"
        android:text="@string/app_name"
        android:layout_marginStart="@dimen/dp_12"
        />

</android.support.constraint.ConstraintLayout>