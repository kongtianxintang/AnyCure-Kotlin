<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recipe_section_header_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/default_desc"
        android:src="@mipmap/v_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/default_margin"
        />
    <TextView
        android:id="@+id/recipe_section_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_desc"
        app:layout_constraintLeft_toRightOf="@id/recipe_section_header_line"
        app:layout_constraintTop_toTopOf="@id/recipe_section_header_line"
        app:layout_constraintBottom_toBottomOf="@id/recipe_section_header_line"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginBottom="2dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@null"
        android:padding="0dp"
        android:id="@+id/recipe_section_header_button"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>