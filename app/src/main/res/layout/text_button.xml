<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/text_button_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ot_stop"
            android:contentDescription="@string/sms_regain_code"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_stop_desc"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toRightOf="@id/text_button_icon"
            app:layout_constraintTop_toTopOf="@id/text_button_icon"
            app:layout_constraintBottom_toBottomOf="@id/text_button_icon"
            />

</android.support.constraint.ConstraintLayout>