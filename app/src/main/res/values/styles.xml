<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--启动页-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Launch" parent="AppTheme.Full">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!--带push动画主题-->
    <style name="AppTheme.Push" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/MyWindowAnimTheme</item>
        <item name="actionBarSize">40dp</item>
    </style>

    <style name="MyWindowAnimTheme">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="AppTheme.Push.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Push.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Push.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
